%head
  %link(rel="stylesheet" type="text/css" href="/css/bootstrap.min.css")
  %link(rel="stylesheet" type="text/css" href="/css/skitter.styles.css")
  %link(rel="stylesheet" type="text/css" href="/css/styles.css")
  %script(rel="stylesheet" type="text/javascript" href="/javascripts/bootstrap.min.js")
  %script(src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript")
  %script(src="/javascripts/jquery-1.6.3.min.js" texte="javascript")
  %script(src="/javascripts/jquery.easing.1.3.js" texte="javascript")
  %script(src="/javascripts/jquery.skitter.min.js" texte="javascript")
  %script(src="/javascripts/slider.js" texte="javascript")

  %title
    4l trophy

  :sass
    #contain
      background-image: url('/img/lol1.png')
      background-repeat: no-repeat
      background-position: 0 0
      width: 1400px
      height: 1000px
      margin: 0 auto
      text-align: center
      #header
        padding-top: 5px
        padding-bottom: 20px
        .title
          margin-top: 10px
      #contain
        .span8
          margin-right: 20px
      #footer
        clear: both

%body
  #contain
    #header
      %h1.title
        The 4l Trophy

    #container
      .span8
        = yield
      .span8
        %div#page
          %h1
            Skitter - Slideshow for anytime!
          %div.content
            %div.border_box
              %div.box_skitter.box_skitter_large
                %ul
                  %li
                    %a(href="#cube")
                      %img.cube(src="/img/lol.png")
                    %div.label_text
                      %p
                        cube
                  %li
                    %a(href="#cubeRandom")
                      %img.cubeRandom(src="/img/lol.png")
                    %div.label_text
                      %p
                        cubeRandom
                  %li
                    %a(href="#block")
                      %img.block(src="/img/lol.png")
                    %div.label_text
                      %p
                        block
                  %li
                    %a(href="#cubeStop")
                      %img.cubeStop(src="/img/lol.png")
                    %div.label_text
                      %p
                        cubeStop
          %h2
            Enjoy! :D
    #footer
      %p
        by yannick placerdat

