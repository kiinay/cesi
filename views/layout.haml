%head
  %link(rel="stylesheet" type="text/css" href="/css/skitter.styles.css")
  %link(rel="stylesheet" type="text/css" href="/css/styles.css")
  %script(src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript")
  %script(src="/javascripts/jquery-1.6.3.min.js" texte="javascript")
  %script(src="/javascripts/jquery.easing.1.3.js" texte="javascript")
  %script(src="/javascripts/jquery.skitter.min.js" texte="javascript")
  %script(src="/javascripts/slider.js" texte="javascript")

  %script(src="/javascripts/lancement.js" texte="javascript")
  %script(src="/javascripts/localscroll/jquery.localscroll.js" texte="javascript")
  %script(src="/javascripts/localscroll/jquery.scrollTo.js" texte="javascript")

  %title
    4l trophy

  :sass
    #container
      background-color: black
      padding-bottom: 90px
      #header
        width: 1080px
        margin: auto
        padding-top: 10px
        padding-bottom: 10px
        position: relative
        border-bottom: solid #FFF
        .title
          color: white
          font-size: 20px
          text-align: left
          display: inline-block
        .edition
          color: white
          font-size: 22px
          font-weight: bold
          right: 0px
          bottom: 10px
          position: absolute
          display: inline-block
          position: absolute
      #contain
        width: 960px
        margin: auto
        padding-top: 40px
        .share
          position: fixed
          left: 0
          top: 250px
          background-color: #333
          padding: 15px 10px
          a
            text-align: center
            text-decoration: none
            display: block
            color: white
            border-top: solid 1px #FFF
            padding-bottom: 15px
            padding-top: 15px
            padding-left: 4px
            padding-right: 4px
            &:first-child
              border-top: 0
              margin-top: 0
              padding-top: 15px
            &:hover
              background-color: #123

%body
  #container
    #header
      .title
        %h1
          The 4l Trophy
      .edition
        %p
          17ème Raid
    #contain
      .share
        %a(href="#header")
          Accueil
        %a(href="#presentation")
          Présentation
        %a(href="#interview")
          Notre interview
        %a(href="#video")
          Autre vidéo
        %a(href="#images")
          4L en images
      = yield
